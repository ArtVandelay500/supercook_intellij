<!--SELECT QUERY BEFORE PAGINATION-->
<!--SELECT QUERY BEFORE PAGINATION-->
<!--SELECT QUERY BEFORE PAGINATION-->

    <select id="selectOne" resultType="codegroup">
        SELECT
            <include refid="selectField" />
        FROM
            codeGroup
        WHERE seq = #{seq}
    </select>

    <update id="update">
        UPDATE codeGroup
        SET
            codeName = #{codeName},
            delNy = #{delNy}
        WHERE
            seq = #{seq}
    </update>

    <insert id="insert">
        INSERT INTO codeGroup(
            codeName,
            delNy
        )VALUES(
            #{codeName},
            #{delNy}
        )
    </insert>

    <delete id="delete">
        DELETE FROM codeGroup WHERE seq = #{seq}
    </delete>



    <!--THIS FOR codeList select options    -->
    <!--THIS FOR codeList select options    -->
    <select id="selectOpt" resultType="codegroup">
        SELECT
            <include refid="selectField"/>
        FROM
            codeGroup
    </select>





</mapper>